---
layout: default
pageClass: posts
templateEngineOverride: njk, md
---
<section>
  <time value="{{ item.date }}" class="text-gray-600">{{ date | readableDate }}</time>
  <h1 class="heading">{{ title }}</h1>
  <div class="mb-2 text-sm text-gray-600">
    About {{ content | readingTime }} reading time
  </div>
  <hr>
  <aside class="mb-2">
    {{ content | toc | safe }}
  </aside>
  <hr>
  <article class="mt-4 space-y-3">
    {{ content | safe }}
  </article>
  {% readerBar "4px", "#fff", "rgb(20 184 166)", "0px"  %}
  <div class="mt-12 pt-4 text-gray-600 text-sm border-t border-gray-300">
    <p>
      This page is part of the <a href="{{ '/blog' | url }}">blog</a> section.
    </p>
  </div>
</section>

